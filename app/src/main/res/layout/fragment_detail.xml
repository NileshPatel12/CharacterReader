<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_green">

        <LinearLayout
                android:id="@+id/lytDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/activity_normal_margins"
                android:layout_marginEnd="@dimen/activity_normal_margins"
                android:layout_marginTop="@dimen/activity_normal_margins">

            <ImageView
                    android:id="@+id/mImageView"
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_marginTop="@dimen/activity_normal_margins"
                    android:layout_marginStart="@dimen/activity_normal_margins"
                    android:contentDescription="@string/photos"/>

            <TextView
                    style="@style/mediumTextStyle"
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    style="@style/mediumTextStyle"
                    android:id="@+id/txtText"
                    android:layout_marginTop="@dimen/activity_normal_margins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lytWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:ignore="UseCompoundDrawables">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_warning_black_24dp"
                    android:contentDescription="@string/warning"/>

            <TextView
                    style="@style/LargeTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/str_warning_msg"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
